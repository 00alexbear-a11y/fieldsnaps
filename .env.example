# FieldSnaps Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =================================
# Core Application
# =================================

# Node environment (development | production)
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# =================================
# Database
# =================================

# PostgreSQL connection string (provided by Replit)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# =================================
# Authentication & Security
# =================================

# JWT secret for token signing (min 32 characters, use strong random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Express session secret (use strong random string)
SESSION_SECRET=

# =================================
# Replit Authentication (OIDC)
# =================================

# Replit app ID (auto-set by Replit)
REPL_ID=

# Replit OIDC issuer URL (default: https://replit.com/oidc)
ISSUER_URL=https://replit.com/oidc

# Replit domains (comma-separated, auto-set by Replit)
REPLIT_DOMAINS=

# Replit deployment URL (auto-set in production)
REPLIT_DEPLOYMENT=

# Replit slug and owner (auto-set by Replit)
REPL_SLUG=
REPL_OWNER=

# =================================
# Stripe Payment Processing
# =================================

# Stripe secret key (from Stripe dashboard)
# Starts with: sk_test_ (test) or sk_live_ (production)
STRIPE_SECRET_KEY=

# Stripe price ID for subscription (from Stripe dashboard)
# Format: price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID=

# Stripe webhook secret (from Stripe webhook settings)
# Format: whsec_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=

# Frontend: Stripe customer portal URL (optional)
VITE_STRIPE_CUSTOMER_PORTAL_URL=

# =================================
# Google Maps API
# =================================

# Google Maps API key for geocoding and map display
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_MAPS_API_KEY=

# =================================
# Email (Resend)
# =================================

# Resend API key for email notifications (optional)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=

# =================================
# Object Storage
# =================================

# Public object storage search paths (comma-separated)
# Example: public,assets
PUBLIC_OBJECT_SEARCH_PATHS=public

# Private object storage directory
# Example: .private
PRIVATE_OBJECT_DIR=.private

# =================================
# Monitoring & Error Tracking (Optional)
# =================================

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Environment name for Sentry (development | staging | production)
VITE_ENVIRONMENT=development

# Sentry auth token for sourcemap upload (optional)
SENTRY_AUTH_TOKEN=

# =================================
# Testing Secrets
# =================================

# Test Stripe keys for integration tests
TESTING_STRIPE_SECRET_KEY=
TESTING_VITE_STRIPE_PUBLIC_KEY=

# =================================
# Notes
# =================================

# Variables prefixed with VITE_ are exposed to the frontend
# Other variables are backend-only and never sent to the client
# Required variables: DATABASE_URL, JWT_SECRET, SESSION_SECRET
# Replit auto-sets: REPL_ID, REPLIT_DOMAINS, DATABASE_URL
